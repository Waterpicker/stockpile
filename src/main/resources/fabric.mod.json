  "authors": [
    "branchpanic"
  ],
  "version": "$version",
  "icon": "assets/stockpile/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "me.branchpanic.mods.stockpile.Stockpile"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "me.branchpanic.mods.stockpile.StockpileClient"
      }
    ]
  },
  "mixins": [
    "stockpile.mixins.json"
  ],
  "languageAdapter": "net.fabricmc.language.kotlin.KotlinLanguageAdapter",
  "requires": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.3.21"
  }
}