{
  "schemaVersion": 1,
  "id": "stockpile",
  "name": "Stockpile",
  "description": "A mod all about storage.",
  "contact": {
    "issues": "https://github.com/branchpanic/stockpile/issues"
  },
  "authors": [
    "branchpanic"
  ],
  "contributors": [
    "Yanis48",
    "XuyuEre",
    "Juuxel"
  ],
  "license": "MIT",
  "version": "$version",
  "icon": "assets/stockpile/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "me.branchpanic.mods.stockpile.Stockpile"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "me.branchpanic.mods.stockpile.StockpileClient"
      }
    ]
  },
  "depends": {
    "fabric": ">=0.4.1",
    "fabricloader": ">=0.7.0",
    "fabric-language-kotlin": ">=1.3.30",
    "libblockattributes_core": ">=0.4.14",
    "libblockattributes_items": ">=0.4.14"
  },
  "suggests": {
    "waila": ">=1.9.0"
  },
  "mixins": [
    "stockpile.mixins.json"
  ],
  "custom": {
    "waila:plugins": [
      {
        "id": "stockpile:all",
        "initializer": "me.branchpanic.mods.stockpile.integration.hwyla.StockpileWailaPlugin"
      }
    ]
  }
}
